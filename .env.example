# Database Configuration
DB_USERNAME=postgres
DB_PASSWORD=postgres

# Mail Configuration (Gmail Example)
# For Gmail, use App Password if 2FA is enabled
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
# Use a strong secret key (min 256 bits)
JWT_SECRET=your-very-secure-and-long-secret-key-for-jwt-signing-minimum-256-bits
APP_BASE_URL=http://localhost:3000

# File Storage (local or s3)
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=./uploads

# Supabase Configuration (Required)
SUPABASE_URL=your-supabase-url
SUPABASE_PUBLIC_URL=your-supabase-public-url
SUPABASE_BUCKET=your-bucket-name
SUPABASE_S3_ENDPOINT=your-supabase-s3-endpoint
SUPABASE_S3_REGION=your-supabase-region
SUPABASE_S3_ACCESS_KEY=your-supabase-access-key
SUPABASE_S3_SECRET_KEY=your-supabase-secret-key

# SMS Configuration
FAST2SMS_API_KEY=your-fast2sms-api-key

# OCR Service Configuration
OCR_SERVICE_URL=http://ocr-service:5000

# AWS S3 Configuration (Optional)
S3_ENABLED=false
S3_BUCKET=income-processing-docs
S3_REGION=us-east-1
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_ENDPOINT=
